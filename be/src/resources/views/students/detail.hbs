<div style="height: 890px; background-image: url(https://img4.thuthuatphanmem.vn/uploads/2020/07/05/anh-background-mau-hong-dep_035900682.jpg)">
<div class="mt-4 mx-4">
    <div class="row pt-5">
        <div class="col-4 m-2">
            <img width="100%" src="{{student.image}}">
        </div>
        
        <div class="col-6 m-2">
            <ul class="list-group">
                <li class="list-group-item">Mã SV: {{student.mssv}}</li>
                <li class="list-group-item">Họ và tên: {{student.name}}</li>
                <li class="list-group-item">Ngày sinh: {{student.dateOfBirth}}</li>
                <li class="list-group-item">Quê quán: {{student.address}}</li>
            </ul>

            <div class="mt-3" style="float: right;">
                <a class="btn btn-secondary" href="/Students" role="button">Quay lại</a>
                <a class="btn btn-primary" href="/Student/{{student._id}}/edit" role="button">Sửa</a>
            </div>
        </div>
    </div>
</div>
</div>